@CHARSET "UTF-8";

.cs-window{
    border: 1px solid black;
    border-radius: 20px;
    overflow: hidden;
}

.cs-window .cs-head{
    background-color: #{{ base_color }};
    margin-top: 0px;
    padding: 5px 20px;
    
    background-image: -webkit-repeating-linear-gradient(-50deg, transparent, transparent 10px, rgba(255,255,255,.2) 20px, rgba(255,255,255,.1) 40px);
    background-image: -moz-repeating-linear-gradient(-50deg, transparent, transparent 10px, rgba(255,255,255,.2) 20px, rgba(255,255,255,.1) 40px);
    background-image: -o-repeating-linear-gradient(-50deg, transparent, transparent 10px, rgba(255,255,255,.2) 20px, rgba(255,255,255,.1) 40px);
    background-image: repeating-linear-gradient(-50deg, transparent, transparent 10px, rgba(255,255,255,.2) 20px, rgba(255,255,255,.1) 40px);
}

.cs-window .cs-body{
    padding: 5px 20px;
}

.cs-article{
	margin: 10px 0px;
	padding: 0px;
	border-top: 1px rgba(0, 0, 0, .2) solid;
	border-left: 1px rgba(0, 0, 0, .2) solid;
	box-shadow: 1px 1px 2px 2px rgba(0, 0, 0, .2);
}

.cs-article-head{
	box-shadow: 1px 0px 2px 0px rgba(0, 0, 0, .2);
	background-color: rgba(0, 0, 0, .05);
}

.cs-center{
  padding-left: 50%;
  transform-style: preserve-3d;
}

.cs-center > *{
  display: inline-block;
  transform: translateX(-50%);
}

.p-center{
    text-align: center;
}

.cs-fieldset{
    background-color: rgba({{ fieldset_background.0 }}, {{ fieldset_background.1 }}, {{ fieldset_background.2 }}, {{ fieldset_background.3 }});
    border: 1px solid rgba({{ fieldset_border.0 }}, {{ fieldset_border.1 }}, {{ fieldset_border.2 }}, {{ fieldset_border.3 }});
    border-radius: 10px;
    box-shadow: 2px 3px 3px {{ fieldset_shadow }};
    margin: 1%;
    overflow: hidden;
    
    -webkit-transition: background-color 1s;
    -moz-transition: background-color 1s;
    -o-transition: background-color 1s;
    transition: background-color 1s;
}

.cs-fieldset:hover{
    background-color: rgba({{ fieldset_background.0 }}, {{ fieldset_background.1 }}, {{ fieldset_background.2 }}, {{ fieldset_background.3 + 0.08 }});
}

.cs-fieldset-head{
    background-image: -webkit-repeating-linear-gradient(top, transparent 80%, rgba(0,0,0,.05) 90%, transparent 100%);
    background-image: -moz-repeating-linear-gradient(top, transparent 80%, rgba(0,0,0,.05) 90%, transparent 100%);
    background-image: -o-repeating-linear-gradient(top, transparent 80%, rgba(0,0,0,.05) 90%, transparent 100%);
    background-image: repeating-linear-gradient(top, transparent 80%, rgba(0,0,0,.05) 90%, transparent 100%);
    padding: 0.5% 0% 0.5% 8%;
    margin: 0%;
    overflow: hidden;
}

.cs-fieldset-body{
    padding: 0% 1% 1% 1%;
}

.cs-form-error ul{
    list-style-type: none;
    padding-left: 1%;
}

.cs-lib-red{
    overflow: hidden;
    margin: 0px;
    padding: 0px;
    background-image: -webkit-linear-gradient(left, rgba(255, 0, 0, .6) 0%, rgba(255, 0, 0, .6) 5px, transparent 6px);
    background-image: -moz-linear-gradient(left, rgba(255, 0, 0, .6) 0%, rgba(255, 0, 0, .6) 5px, transparent 6px);
    background-image: -o-linear-gradient(left, rgba(255, 0, 0, .6) 0%, rgba(255, 0, 0, .6) 5px, transparent 6px);
    background-image: linear-gradient(left, rgba(255, 0, 0, .6) 0%, rgba(255, 0, 0, .6) 5px, transparent 6px);
}

.cs-lib-green{
    overflow: hidden;
    margin: 0px;
    padding: 0px;
    background-image: -webkit-linear-gradient(left, rgba(0, 255, 0, .6) 0%, rgba(0, 255, 0, .6) 5px, transparent 6px);
    background-image: -moz-linear-gradient(left, rgba(0, 255, 0, .6) 0%, rgba(0, 255, 0, .6) 5px, transparent 6px);
    background-image: -o-linear-gradient(left, rgba(0, 255, 0, .6) 0%, rgba(0, 255, 0, .6) 5px, transparent 6px);
    background-image: linear-gradient(left, rgba(0, 255, 0, .6) 0%, rgba(0, 0, 255, .6) 5px, transparent 6px);
}

.cs-loader-head{
}

.cs-loader-head a{
    cursor: pointer;
}

.cs-loader{
    display: none;
}

.cs-loading{
    display: block;
    border: 2px ridge #{{ base_color }};
    border-right: none;
    border-bottom: none;
    box-shadow: 2px 2px 3px #{{ base_color }};
    padding: 1%;
}

.cs-loading > img{
    display: block;
    margin: auto;
}

.cs-loading > div{
    display: none;
}

.cs-loaded{
    display: block;
    border: 2px ridge #{{ base_color }};
    border-right: none;
    border-bottom: none;
    box-shadow: 2px 2px 3px #{{ base_color }};
    padding: 1%;
}

.cs-loaded > img{
    display: none;
}

.cs-loaded > div{
    display: block;
}

.cs-btnset > div{
    display: inline;
}

.cs-right > div{
    display: inline-block;
    float: right;
}

.cs-right:after{
    content: " ";
    display: block;
    clear: right;
}
