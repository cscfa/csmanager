
<div class="row" style="overflow: hidden;">
{{ form_start(form) }}
	<div class="col-xs-12">
		<div class="cs-center col-xs-12">
			{{ form_label(form.content) }}
		</div>
		<div class="cs-center col-xs-12">
			{{ form_widget(form.content) }}
		</div>
		{{ form_row(form.content) }}
	</div>
	
	<div class="cs-center col-xs-12">
		{{ form_row(form.submit) }}
	</div>
{{ form_end(form) }}
</div>
